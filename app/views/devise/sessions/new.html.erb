<div class="row mt-5">
   
    <div class="col-md-6 offset-md-3">
      <div class="row">
        <div class="col-md-8 welcome-image">
          <img src="https://thumbs.dreamstime.com/b/blog-information-website-concept-workplace-background-text-view-above-127465079.jpg" class="img-fluid" alt="...">
        </div>
        <div class="col-md-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field form-group mb-2">
            <%= f.label :email, class: 'form-label'%><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        
          <div class="field form-group mb-2">
            <%= f.label :password, class: 'form-label' %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        
          <% if devise_mapping.rememberable? %>
            <div class="field form-group mb-2">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: 'form-label'%>
            </div>
          <% end %>
        
          <div class="actions mb-2">
            <%= f.submit "Log in", class: "btn btn-dark" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
        </div>
      </div>
      
      

    </div>
</div>
