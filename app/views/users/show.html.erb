<h2 style="text-align:center"> <%= @user.Name %>'s details  </h2>

<div class="row">
    <div class="col-md-12 center">
        <%= render partial: "shared/user_list", locals: {user: @user} %>
    </div>
</div>
<div class="row">
    <div class="col-md-12 center">
        <div class="card">
            <div class="card-body">
               Bio: <p>
               <i><%= @user.Bio %>  </i>   
            </div>
        </div>
        <ul class="recent-posts">
            <h3>Recent Posts</h3>
            <% if @user.recent_posts.length > 0 %>
                <% @user.recent_posts.each_with_index do |post, index| %>
                    <li>
                        <%= link_to user_post_path(post.id) do %>
                            <%= render partial: "shared/post_list", locals: {post: post, post_number: index += 1, user_details: true} %>
                        <% end %>
                    </li>
                <% end %>
            <% else %>
                <p>No posts yet</p>
            <% end %>
        </ul>
    </div>
</div>
        </ul>
    </div>
</div>
        </ul>
    </div>
</div>

